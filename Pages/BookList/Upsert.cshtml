@page
@model BookListrazor.Pages.BookList.UpsertModel



<br />
<h2 class="text-info">@(Model.books.BookId!=0?"Edit":"CReate") Book</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        @if (Model.books.BookId != 0)
        {
            <input type="hidden" asp-for="books.BookId" />
        }

        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div classs="form-group row">
            <div class="col-3">
                <label asp-for="books.BookName"></label>
            </div>
            <div class="col-6">
                <input asp-for="books.BookName" class="form-control" />
            </div>
            <span asp-validation-for="books.BookName" class="text-danger"></span>
        </div>

        <div classs="form-group row">
            <div class="col-3">
                <label asp-for="books.Author"></label>
            </div>
            <div class="col-6">
                <input asp-for="books.Author" class="form-control" />
            </div>
            <span asp-validation-for="books.Author" class="text-danger"></span>

        </div>

        <div classs="form-group row">
            <div class="col-3">
                <label asp-for="books.ISPN"></label>
            </div>
            <div class="col-6">
                <input asp-for="books.ISPN" class="form-control" />
            </div>
            <span asp-validation-for="books.ISPN" class="text-danger"></span>

        </div>

        <div class="form-group row">
            <div class="col-3 offset-3">
                <button type="submit" value="update" class="btn btn-primary form-control" />@(Model.books.BookId != 0 ? "Update" : "Create")</button>
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to list</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
